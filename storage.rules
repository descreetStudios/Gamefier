rules_version = '2';
service firebase.storage {
  match /b/{bucket}/o {

    match /profile-icons/{userId}/{allPaths=**} {
      allow read: if request.auth != null;
      allow write: if request.auth != null &&
                   request.auth.uid == userId && // solo il proprietario
                   request.auth.token.role != "banned"; // non bannato
    }

    match /{allPaths=**} {
      allow read: if request.auth != null;
      allow write: if request.auth != null &&
                   request.auth.token.role != "banned";
    }
  }
}
